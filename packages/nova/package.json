{
  "name": "@cbnventures/nova",
  "version": "0.13.1",
  "description": "Scripts, templates, and project configuration for the common JavaScript and TypeScript developer",
  "keywords": [
    "eslint",
    "eslint-config",
    "eslint-flat-config",
    "typescript",
    "tsconfig",
    "tsconfig-presets",
    "linting",
    "code-style",
    "scripts",
    "templates",
    "react",
    "nextjs",
    "node",
    "monorepo"
  ],
  "license": "MIT",
  "homepage": "https://cbnventures.github.io/nova/",
  "bugs": {
    "email": "bugs@cbnventures.io",
    "url": "https://github.com/cbnventures/nova/issues"
  },
  "author": {
    "name": "CBN Ventures",
    "email": "contact@cbnventures.io",
    "url": "https://www.cbnventures.io/"
  },
  "contributors": [
    {
      "name": "Jacky Liang",
      "email": "hello@mrjackyliang.com",
      "url": "https://www.mrjackyliang.com/"
    }
  ],
  "funding": [
    "https://github.com/sponsors/cbnventures",
    "https://www.paypal.com/biz/profile/cbnventures"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cbnventures/nova.git",
    "directory": "packages/nova"
  },
  "exports": {
    "./rules/eslint": "./build/src/rules/eslint/index.js",
    "./rules/eslint/*": "./build/src/rules/eslint/*.js",
    "./presets/eslint": "./build/src/presets/eslint/index.mjs",
    "./presets/eslint/*": "./build/src/presets/eslint/*.mjs",
    "./presets/tsconfig/dx-essentials.json": "./build/src/presets/tsconfig/dx-essentials.json",
    "./presets/tsconfig/dx-strict.json": "./build/src/presets/tsconfig/dx-strict.json",
    "./presets/tsconfig/env-browser.json": "./build/src/presets/tsconfig/env-browser.json",
    "./presets/tsconfig/env-edge.json": "./build/src/presets/tsconfig/env-edge.json",
    "./presets/tsconfig/env-node.json": "./build/src/presets/tsconfig/env-node.json",
    "./presets/tsconfig/env-service-worker.json": "./build/src/presets/tsconfig/env-service-worker.json",
    "./presets/tsconfig/env-web-worker.json": "./build/src/presets/tsconfig/env-web-worker.json",
    "./presets/tsconfig/fw-docusaurus.json": "./build/src/presets/tsconfig/fw-docusaurus.json",
    "./presets/tsconfig/fw-expressjs.json": "./build/src/presets/tsconfig/fw-expressjs.json",
    "./presets/tsconfig/fw-nextjs.json": "./build/src/presets/tsconfig/fw-nextjs.json",
    "./presets/tsconfig/platform-cloudflare-workers.json": "./build/src/presets/tsconfig/platform-cloudflare-workers.json",
    "./presets/tsconfig/tool-vite.json": "./build/src/presets/tsconfig/tool-vite.json",
    "./toolkit": "./build/src/toolkit/index.js",
    "./toolkit/*": "./build/src/toolkit/*.js"
  },
  "type": "module",
  "files": [
    "./build"
  ],
  "bin": {
    "nova": "build/src/cli/index.js"
  },
  "private": false,
  "scripts": {
    "dev": "npm-run-all --parallel dev:*",
    "dev:watch": "tsc --project tsconfig.json --watch",
    "dev:fix-alias": "tsc-alias -p tsconfig.json -w",
    "build": "npm-run-all --sequential build:*",
    "build:clean": "npm run clean",
    "build:build": "tsc --project tsconfig.json --outDir ./build",
    "build:fix-alias": "tsc-alias -p tsconfig.json",
    "build:fix-perms": "shx chmod +x ./build/src/cli/index.js",
    "build:copy-tsconfig": "shx cp -r \"./src/presets/tsconfig\" \"./build/src/presets/tsconfig\"",
    "check": "npm-run-all --sequential check:*",
    "check:lint": "eslint ./ --max-warnings=0",
    "check:types": "nova utility type-check",
    "check:test": "node --test ./build/src/tests/**/*.test.js",
    "clean": "npm-run-all --parallel clean:*",
    "clean:clear": "shx rm -rf ./build"
  },
  "engines": {
    "node": "^20 || ^22 || ^24"
  },
  "dependencies": {
    "@eslint/js": "9.39.3",
    "@stylistic/eslint-plugin": "5.9.0",
    "chalk": "5.6.2",
    "commander": "14.0.3",
    "eslint-mdx": "3.7.0",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-jsx-a11y": "6.10.2",
    "eslint-plugin-mdx": "3.7.0",
    "eslint-plugin-n": "17.24.0",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "7.0.1",
    "globals": "17.3.0",
    "prompts": "2.4.2",
    "typescript-eslint": "8.56.1",
    "zod": "4.3.6"
  },
  "devDependencies": {
    "@commander-js/extra-typings": "14.0.0",
    "@types/eslint-plugin-jsx-a11y": "6.10.1",
    "@types/node": "24.9.1",
    "@types/prompts": "2.4.9",
    "@typescript-eslint/rule-tester": "8.56.1",
    "eslint": "9.39.3",
    "eslint-import-resolver-typescript": "4.4.4",
    "npm-run-all": "4.1.5",
    "shx": "0.4.0",
    "tsc-alias": "1.8.16",
    "typescript": "5.9.3"
  },
  "peerDependencies": {
    "eslint": "^9",
    "typescript": "^5"
  },
  "peerDependenciesMeta": {
    "eslint": {
      "optional": true
    },
    "typescript": {
      "optional": true
    }
  }
}
